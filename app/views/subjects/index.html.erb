<div class="container">
<%= render 'teachers/nav' %>

<div class='row'>
<h3 class='col-md-4'>All Subjects</h3>
  <%= link_to 'Add Subject', new_teacher_subject_path, class: 'btn btn-success pull-right'%>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Class Period</th>
        <th scope="col">Name</th>
        <th scope="col">Student Count</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject|%>
        <tr>
          <td> <%= subject.class_period %></td>
          <td> <%= subject.name %></td>
          <td> <%= subject.students.length %></td>
          <td> <%= link_to 'Add students', edit_teacher_subject_path(@teacher.id, subject) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>