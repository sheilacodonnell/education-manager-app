<div class="container">
<%= render 'nav' %>

<h1 class='mt-3 mb-3 text-center'><%= @teacher.name %>'s Teacher Portal</h1>
<hr>
  <div class="row">
    <div class='col'>
    <h5>Assignments Due Today</h5>
        <% @teacher.assignments.due_today.each do |assignment|%>
          <div class="card border-info mb-3" style="max-width: 18rem;">
          <div class="card-header"><%= assignment.subject.name %> - <%= class_period_formatted(assignment.subject) %></div>
          <div class="card-body text-info">
            <h5 class="card-title"><%= assignment.title %></h5>
            <p class="card-text">Due <%= basic_date(assignment.due_date) %></p>
          </div>
          </div>
        <% end %>
      </div>

    <div class="col">
      <h5>Your Current Schedule</h5>

      <table class="table table-sm">
        <thead>
          <tr class="table-success">
            <th scope="col">Class Period</th>
            <th scope="col">Subject</th>
          </tr>
        </thead>
        <tbody>
          <% @teacher.subjects.each do |subject|%>
          <tr>
            <td> <%= subject.class_period %></td>
            <td> <%= subject.name %></td>
          </tr>
        <% end%> 
      </tbody>
    </table>
    </div>
  </div>
</div>
